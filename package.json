{
  "name": "soldi.js",
  "version": "0.1.0",
  "description": "A simple currency managmenet library",
  "repository": "https://github.com/nick.codes/soldi.js",
  "author": "Nick Palmer <nick@nick.codes>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "eslint --fix . && pretty-quick --staged"
    }
  },
  "devDependencies": {
    "eslint": "7.31.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1"
  },
  "scripts": {
    "setup": "lerna bootstrap",
    "test": "lerna run --no-bail test",
    "lint": "eslint packages/**/src packages/**/test",
    "clean": "rm -rf node_modules && lerna exec -- rm -rf node_modules coverage lib"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
